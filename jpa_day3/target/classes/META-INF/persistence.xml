<persistence xmlns="http://java.sun.com/xml/ns/persistence"  version="2.0">
     <persistence-unit name="Player_xworkz" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.xworkz.Player</class>
       

        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/xworkz"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="Xworkzodc@123"/>
            
            <!-- hibernate dialect is specific to DB 
                 dialect is responsible for generating sql query specific to DB
                 it also convert java data types into database data type -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="hibernate.show_sql" value="true"/> <!-- display the sql query in console -->
            <property name="hibernate.format_sql" value="true"/> <!-- format the sql query -->
            <property name="hibernate.hbm2ddl.auto" value="create"/><!-- hibernate mapping(hbm) to data defination language(ddl) -->
        </properties>
    </persistence-unit>  
      </persistence>
      
      